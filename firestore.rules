rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - only the owner can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Calendar groups - members can read/write
    match /calendar_groups/{groupId} {
      // Anyone authenticated can read (to check if group exists when joining)
      allow read: if request.auth != null;

      // Anyone authenticated can create a new group
      allow create: if request.auth != null;

      // Members can update
      allow update: if request.auth != null;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
